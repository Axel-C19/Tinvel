{
  "routes": [
    {
      "route": "/*",
      "serve": "/index.html"
    }
  ],
  "mimeTypes": {
    ".js": "text/javascript",
    ".mjs": "text/javascript",
    ".jsx": "text/javascript",
    ".json": "application/json",
    ".css": "text/css",
    ".svg": "image/svg+xml"
  },
  "security": {
    "contentSecurityPolicy": {
      "mode": "enforce",
      "directives": {
        "default-src": ["'self'"],
        "script-src": [
          "'self'",
          "'unsafe-inline'",
          "https://atlas.microsoft.com"
        ],
        "style-src": [
          "'self'",
          "'unsafe-inline'",
          "https://atlas.microsoft.com"
        ],
        "img-src": ["'self'", "data:", "https://atlas.microsoft.com"],
        "connect-src": ["'self'", "https://atlas.microsoft.com"],
        "frame-src": ["'self'", "https://atlas.microsoft.com"]
      }
    }
  }
}
